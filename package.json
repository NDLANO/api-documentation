{
  "name": "api-documentation",
  "version": "0.1.0",
  "private": true,
  "description": "NDLA API Documentation",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "dev": "cross-env API_DOCUMENTATION_PORT=3001 nodemon --watch src/ --ext ts,js --exec ts-node src/server.ts",
    "start": "OPENAPI_ENDPOINTS=$(kubectl --context test get configmap api-docs-openapi-endpoints -o json | jq -r .data.OPENAPI_ENDPOINTS) yarn dev",
    "test": "jest",
    "tdd": "npm test -- --watch",
    "lint": "eslint src",
    "start-prod": "cross-env NODE_ENV=production node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/api-documentation.git"
  },
  "engines": {
    "node": ">=22.17.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "cross-env": "^10",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "nodemon": "^3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@types/swagger-ui-dist": "^3.30.6",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-status": "^1.6.1",
    "swagger-ui-dist": "5.29.3",
    "undici": "^7.16.0",
    "winston": "^3.14.2"
  },
  "jest": {
    "testRegex": "/__tests__/.*-test.(ts|tsx|js|jsx)$",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "bugs": {
    "url": "https://github.com/NDLANO/api-documentation/issues"
  },
  "homepage": "https://github.com/NDLANO/api-documentation",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
